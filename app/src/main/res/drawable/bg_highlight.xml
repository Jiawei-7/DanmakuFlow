<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层红色方框 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- 背景色设置为透明或者其他颜色 -->
            <stroke
                android:width="2dp"
                android:color="#FF0000" /> <!-- 红色边框 -->
            <corners android:radius="8dp" /> <!-- 圆角半径 -->
        </shape>
    </item>
</layer-list>
